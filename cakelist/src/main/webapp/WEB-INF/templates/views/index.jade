-import com.oleksandrah.cakes.model.Cake
-import com.oleksandrah.cakes.SlickApp

-@ val cakes : List[Cake]


h1 Scalatra Cakes-list

form(name="newCakes" action="/new" method="post")
    Add new Cakes:
    input(type="text" name="cakes")
    button(type="submit" name="add")
        New cakes

h2 Cakes to eat
ul
- for (cake <- cakes)
    - if (cake.completed)
        li <strike>#{cake.name}</strike>  <a href="/#{cake.id}/delete">[delete]</a>
    - else
        li #{cake.name}  <a href="/#{cake.id}/completed">[completed]</a>
